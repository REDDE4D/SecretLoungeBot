# MongoDB Configuration (shared with bot)
MONGO_URI=mongodb://localhost:27017
DBNAME=lobbyBot

# API Server Configuration
API_PORT=3001
NODE_ENV=development

# JWT Secrets (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_ACCESS_SECRET=your-access-secret-here-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-here-min-32-chars

# Telegram Bot Token (same as main bot)
BOT_TOKEN=your-bot-token-from-botfather

# CORS Configuration
DASHBOARD_URL=http://localhost:3000

# Optional: Custom domain for production
# DASHBOARD_DOMAIN=dashboard.yourdomain.com
